#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    char filename[100];
    char temp[100];
    int shortestLength = 100000;
    char shortestString[100];
    FILE *file;

    // Get file name from user
    printf("Введите имя файла: ");
    scanf("%s", filename);

    // Open file
    file = fopen(filename, "r+");
    if (file == NULL) {
        printf("Не удалось открыть файл.\n");
        exit(1);
    }

    // Find shortest string in file
    while (fgets(temp, sizeof(temp), file)) {
        int length = strlen(temp);
        if (length < shortestLength) {
            shortestLength = length;
            strncpy(shortestString, temp, sizeof(shortestString));
        }
    }

    // Replace shortest string with "С новым годом!"
    fseek(file, -(shortestLength), SEEK_CUR);
    fputs("С новым годом!", file);

    // Close file
    fclose(file);

    return 0;
}
